    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="KijinSmithy"]/comps/li[@Class = "CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
          <order>Prepend</order>
          <value>
            <li>Coal</li>
            <li>Charcoal</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>